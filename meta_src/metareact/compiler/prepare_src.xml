<?xml version="1.0"?>
<root>
    <info>
        <name> prepare_src</name>
        <description> It validates the XML files and removes all previously generated files or parts of files.</description>
    </info>
    <outputs>
        <output name="null">
            
        </output>
    </outputs>
    <inputs>
        <input name="source_path">
            <origin origin_name="source_path" origin_location="validate_XML"/>
            <origin origin_name="source_path" origin_location="remove_generated_XML"/>
            <origin origin_name="source_path" origin_location="delete_generated_src"/>
        </input>
        <input name="fs">
            <origin origin_name="fs" origin_location="validate_XML"/>
            <origin origin_name="fs" origin_location="remove_generated_XML"/>
            <origin origin_name="fs" origin_location="delete_generated_src"/>
        </input>
        <input name="path">
            <origin origin_name="path" origin_location="validate_XML"/>
            <origin origin_name="path" origin_location="remove_generated_XML"/>
            <origin origin_name="path" origin_location="delete_generated_src"/>
        </input>
        <input name="xml_files" side-effect="true">
            <description>It is provided all the xml files of the source_path directory and its subdirectories.</description>
            <origin origin_name="xml_files" origin_location="validate_XML"/>
            <origin origin_name="xml_files" origin_location="remove_generated_XML"/>
            <origin origin_name="xml_files" origin_location="delete_generated_src"/>
        </input>
    </inputs>
</root>
