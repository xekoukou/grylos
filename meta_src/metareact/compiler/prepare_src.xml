<?xml version="1.0"?>
<root>
    <info>
        <name> prepare_src</name>
        <description> It validates the XML files and removes all previously generated files or parts of files.</description>
    </info>
    <outputs>
        <output name="null">
            <origin origin_name="null" origin_location="delete_generated_src" generated="true"/>
            <origin origin_name="null" origin_location="remove_generated_XML" generated="true"/>
            <origin origin_name="null" origin_location="validate_XML" generated="true"/>
        </output>
        <output name="deleted_src_files" side-effect="true" generated="true">
            <description>It deletes all the generated src files.</description>
            <origin origin_name="deleted_src_files" origin_location="delete_generated_src" generated="true"/>
        </output>
        <output name="cleaned_xml_files" side-effect="true" generated="true">
            <description>It saves the cleaned xml_files.</description>
            <origin origin_name="cleaned_xml_files" origin_location="remove_generated_XML" generated="true"/>
        </output>
        <output name="xml_errors" side-effect="true" generated="true">
            <description>It prints possible xml errors.</description>
            <origin origin_name="xml_errors" origin_location="validate_XML" generated="true"/>
        </output>
    </outputs>
    <inputs>
        <input name="source_path">
            <origin origin_name="source_path" origin_location="validate_XML"/>
            <origin origin_name="source_path" origin_location="remove_generated_XML"/>
            <origin origin_name="source_path" origin_location="delete_generated_src"/>
        </input>
        <input name="fs">
            <origin origin_name="fs" origin_location="validate_XML"/>
            <origin origin_name="fs" origin_location="remove_generated_XML"/>
            <origin origin_name="fs" origin_location="delete_generated_src"/>
        </input>
        <input name="path">
            <origin origin_name="path" origin_location="validate_XML"/>
            <origin origin_name="path" origin_location="remove_generated_XML"/>
            <origin origin_name="path" origin_location="delete_generated_src"/>
        </input>
        <input name="xml_files" side-effect="true">
            <description>It is provided all the xml files of the source_path directory and its subdirectories.</description>
            <origin origin_name="xml_files" origin_location="validate_XML"/>
            <origin origin_name="xml_files" origin_location="remove_generated_XML"/>
            <origin origin_name="xml_files" origin_location="delete_generated_src"/>
        </input>
        <input name="exec">
            <origin origin_name="exec" origin_location="validate_XML"/>
        </input>
        <input name="cheerio">
            <origin origin_name="cheerio" origin_location="remove_generated_XML"/>
        </input>
    </inputs>
    <graph generated="true"> </graph>
</root>
