<?xml version="1.0"?>
<root>
    <info>
        <name> parse_mr_files </name>
        <description> It parses all mr files and generates the graph tag and content of the xml files. </description>
    </info>
    <inputs>
        <input name="cheerio">
            <origin origin_name="cheerio" origin_location="insert_graph_content_to_xml_files"/>
        </input>
        <input name="source_path">
            <origin origin_name="source_path" origin_location="find_mr_file_paths"/>
        </input>
        <input name="fs">
            <origin origin_name="fs" origin_location="find_mr_file_paths"/>
            <origin origin_name="fs" origin_location="insert_graph_content_to_xml_files"/>
        </input>
        <input name="path">
            <origin origin_name="path" origin_location="find_mr_file_paths"/>
        </input>
        <input name="xml_files" side-effect="true">
            <origin origin_name="xml_files" origin_location="insert_graph_content_to_xml_files"/>
            <description>It is provided all the xml files of the source_path directory and its subdirectories.</description>
        </input>
        <input name="mr_files" side-effect="true">
            <description>It is provided all the mr files of the source_path directory and its subdirectories.</description>
        </input>
        <input generated="true" name="null"/>
        <input name="disk_mr_files" side-effect="true" generated="true">
            <description>It is provided all the mr files of the source_path directory and its subdirectories.</description>
            <origin origin_name="disk_mr_files" origin_location="find_mr_file_paths" generated="true"/>
        </input>
    </inputs>
    <outputs>
        <output name="xml_files" side-effect="true">
            <origin origin_name="filled_xml_files" origin_location="insert_graph_content_to_xml_files"/>
            <description>It returns all xml files with the graph tag when appropriate.</description>
        </output>
        <output name="file_missing_errors" side-effect="true">
            <origin origin_name="file_missing_errors" origin_location="insert_graph_content_to_xml_files"/>
            <description>It prints an error when an xml file is not there and exits.</description>
        </output>
        <output name="null">
            <origin origin_name="null" origin_location="insert_graph_content_to_xml_files" generated="true"/>
        </output>
        <output generated="true" name="mr_file_paths"/>
        <output generated="true" name="graphs"/>
        <output name="error" side-effect="true" generated="true">
            <description>It prints an error message and exits.</description>
            <origin origin_name="error" origin_location="check_same_output_name" generated="true"/>
        </output>
    </outputs>
    <graph generated="true">
        <node fn_name="find_mr_file_paths">
            <output name="mr_files">
                <end_point fn_name="split_srcode_into_lines"/>
            </output>
            <output name="mr_file_paths">
                <end_point fn_name="create_graphs"/>
                <end_point fn_name="insert_graph_content_to_xml_files"/>
                <end_point fn_name="check_same_output_name"/>
            </output>
        </node>
        <node fn_name="split_srcode_into_lines">
            <output name="srcodes">
                <end_point fn_name="create_graphs"/>
            </output>
        </node>
        <node fn_name="create_graphs">
            <output name="graphs">
                <end_point fn_name="insert_graph_content_to_xml_files"/>
                <end_point fn_name="check_same_output_name"/>
            </output>
        </node>
        <node fn_name="check_same_output_name">
            <output name="null">
                <end_point fn_name="insert_graph_content_to_xml_files"/>
            </output>
        </node>
    </graph>
</root>
